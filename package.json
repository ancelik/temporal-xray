{
  "name": "temporal-xray",
  "version": "1.1.0",
  "description": "Debug Temporal workflows directly from Claude Code. Provides six read-only MCP tools to inspect executions, trace data flow, compare runs, check worker health, and detect patterns across thousands of executions.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build"
  },
  "files": [
    "dist",
    "skills",
    "agents",
    ".claude-plugin",
    ".mcp.json",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "temporal",
    "workflow",
    "debugging",
    "mcp",
    "claude-code"
  ],
  "author": "Neil Celik <https://evermindlabs.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@temporalio/client": "^1.11.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "typescript": "^5.7.3"
  }
}
